# Copy this file to .env and fill values before running docker-compose
# IMPORTANT: Keep your real `.env` out of version control (add `.env` to .gitignore)

# Telegram Bot Token (from @BotFather)
BOT_TOKEN=your_bot_token_here

# BANK_ACCOUNT: Số tài khoản (STK) mặc định hiển thị/ dùng trong bot
BANK_ACCOUNT=0123456789

# BANK_CODE: Mã ngân hàng hoặc tên ngân hàng https://api.vietqr.vn/vi/danh-sach-ma-ngan-hang
BANK_CODE=VIETCOMBANK

# Database file path inside container. The compose setup mounts host ./sql3lite to /app/sql3lite
DB_NAME=/app/sql3lite/sales.db
LOG_LEVEL=INFO
TIMEZONE_OFFSET_HOURS=7